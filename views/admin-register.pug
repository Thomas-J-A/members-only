extends layout

block content
  h1 Become an Admin

  if currentUser.isAdmin
    p You are already an admin.
  else
    form(action="", method="POST")
      label(for="become_admin_password") Password
      input#become_admin_password(type="password", name="password", value=(password === undefined ? "" : password))
      button(type="submit") Submit
      a(href="/") Cancel

    if errors
      ul
        each error in errors
          li!= error.msg
